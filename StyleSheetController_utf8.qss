QScrollBar {
     border: none;
     background: #bbbbbb;
     height: 10px;
     width: 6px;
     margin: 0px;
}

QScrollBar::handle {
     	background: qlineargradient(spread:pad, x1:1, y1:0, x2:1, y2:1, 
stop:1 #cccccc,
stop:0.5 #E6EBEB, 
stop:0 #CCCCCC);     
	min-width: 20px;
     	min-height: 20px;
}

QScrollBar::add-line,  QScrollBar::sub-line {
     background: none;
     border: none;
}

QScrollBar::add-page, QScrollBar::sub-page {
     background: none;
}

QTreeView::branch:closed:adjoins-item:has-children {
     background:  solid #777777;
     margin: 6px;
     height: 6px;
     width: 6px;
     border-radius: 3px;
}

