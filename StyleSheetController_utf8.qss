/*Главная форма*/
QMainWindow{
	background: rgb(229, 228, 226);
	font: "Arial";
	font-size: 12px;
}
/**********/
/*Статус бар*/
QStatusBar{
	background-color: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(226, 229, 228, 255), stop:1 rgba(191, 180, 160, 255));
	min-height: 25;
	color:black;
}


/**********/
/*Меню бар*/
QMenuBar{
	background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(160, 170, 191, 255), stop:1 rgba(105, 121, 152, 255));
	color: white;
	min-height:40;
	spacing: 5px;
	font: "Arial";
	font-size: 12px;
}

QMenuBar::item {
    background: transparent;	
}

QMenuBar::item:selected {
	background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(160, 170, 191, 255), stop:1 rgba(80, 140, 210, 255));
}

QMenuBar::item:pressed {
	background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(160, 170, 191, 255), stop:1 rgba(80, 140, 250, 255));
}

QMenuBar::item:disabled {
	background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(160, 160, 160, 255), stop:1 rgba(100, 100, 100, 255));
}




QMenu{
	background: rgba(181, 180, 180, 255);
	color: rgb(96,96,96);
}
QMenu::item:!selected {
	padding: 2px 25px 2px 15px;
}

QMenu::item:selected {
	background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(210, 210, 210, 255), stop:1 rgba(161, 160, 160, 255));
	color: rgb(32,32,32);
	padding: 2px 25px 2px 20px;
}

QMenu::item:pressed {
	background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(151, 150, 150, 255), stop:1 rgba(161, 160, 160, 255));
	color: rgb(96,96,96);
	padding: 2px 25px 2px 20px;
}

QMenu::item:disabled {
	background: qlineargradient(spread:pad, x1:0, y1:0, x2:0, y2:1, stop:0 rgba(170, 170, 170, 255), stop:1 rgba(170, 170, 170, 255));
	color: rgb(110,110,110);
}
