/*ПушБаттон*/

QPushButton:hover{
	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, 
stop:0 #93D3E0, 
stop:1 #E5E4E2);
	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, 
stop:0 #A0AABF, 
stop:1 #E5E4E2);
	color:rgb(64, 64, 64);
}
QPushButton {
	border-style: solid;
	border-color: #BFB4A0;
	border-width: 1px;
	border-radius: 0px;
    	min-width: 88px;
	min-height: 23px;
	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, 
stop:0 #cccccc, 
stop:1 #E6EBEB);
	color: rgb(0,20,20);
    	font:  large"Arial";
	font-size: 12px;
}

QPushButton:pressed {
	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, 
stop:0 #a0aabf, 
stop:1 #E6EBEB);
	color:rgb(75, 75, 75);
}

QPushButton:on {
	background: rgb(52,122,183);
	color: rgb(0,0,0);
}

QPushButton:disabled {
        background: transparent #e5e9ee;
        color: black;
}



/**********/
/*Таб бар*/

QTabWidget::pane { /* The tab widget frame */
	border:  1px solid #C2C7CB;
	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, 
stop:0 #D4D3D1, 
stop:1 #e5e4e2);
	font: "Arial";
	font-size: 10px;
	
}

QTabWidget::tab-bar {
    	left: 1px; 
	border-bottom: none;
	font: "Arial";
	font-size: 10px;
}

QTabBar::tab {
	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, 
stop:0 #CCCCCC, 
stop:1 #E6EBEB);
	font: "Arial";
	font-size: 12px;
	width: 20ex;
}

QTabBar::tab:selected, QTabBar::tab:hover {
  	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, 
stop:0 #A0AABF, 
stop:1 #E5E4E2);
}

QTabBar::tab:selected {
    	/*border-color: #9B9B9B;
    	border-bottom-color: #C2C7CB; /* same as pane color */
	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, 
stop:0 #a0aabf, 
stop:1 #E5E4E2);	
}

QTabBar::tab:!selected {
	color: #667667;
}
/**********/
/*Прогресс бар*/
QProgressBar{
	background: #C3C4C5;
	color: black;
	font: "Arial";
	font-size:12px;
	text-align: center;
}

QProgressBar::chunk {
    	background-color: #6677FF;
	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, 
stop:1 #009900,
stop:0.5 #E6EBEB, 
stop:0 #009900);
}

QProgressBar:horizontal {
	background:qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0, 
stop:1 #cccccc,
stop:0.5 #E6EBEB, 
stop:0 #CCCCCC);
	border: 1px solid grey;
	border-radius: 1px;
}
QProgressBar::chunk:horizontal {
	background: qlineargradient(x1: 0, y1: 0.5, x2: 1, y2: 0.5, stop: 0 green, stop: 1 transparent);
	background: qlineargradient(spread:pad, x1:0, y1:1, x2:0, y2:0,
stop:1 #00aa00,
stop:0.5 #E5EAEA, 
stop:0 #00aa00);
}

